<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="bibliotheque">

        <class>entities.Adresses</class>
        <class>entities.Auteurs</class>
        <class>entities.Bibliotheques</class>
        <class>entities.Editeurs</class>
        <class>entities.ExemplairesLivres</class>
        <class>entities.Factures</class>
        <class>entities.FacturesDetail</class>
        <class>entities.Genres</class>
        <class>entities.Jours</class>
        <class>entities.Livres</class>
        <class>entities.LivresAuteurs</class>
        <class>entities.LivresGenres</class>
        <class>entities.Localites</class>
        <class>entities.Pays</class>
        <class>entities.Penalites</class>
        <class>entities.Permissions</class>
        <class>entities.PermissionsRoles</class>
        <class>entities.Reservation</class>
        <class>entities.Roles</class>
        <class>entities.Tarifs</class>
        <class>entities.TarifsJours</class>
        <class>entities.TarifsPenalites</class>
        <class>entities.Utilisateurs</class>
        <class>entities.UtilisateursAdresses</class>
        <class>entities.UtilisateursBibliotheques</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/bibliotheque?autoReconnect=true"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="root" />
            <property name="eclipselink.jdbc.password" value="root" />
        </properties>
    </persistence-unit>
</persistence>
